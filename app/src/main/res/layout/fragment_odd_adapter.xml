<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="ass"
        android:textColor="#666666"
        android:textSize="18sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初赔"
                android:textSize="13sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/first_even_odds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初赔"
                android:textSize="13sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/first_lost_odds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初赔"
                android:textSize="13sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/first_win_odds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初赔"
                android:textSize="13sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="即时"
                android:textSize="13sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/lost_odds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初赔"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="#fc3a3a"/>

            <TextView
                android:id="@+id/lost_odds_chg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初赔"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="#fc3a3a"/>
            <TextView
                android:id="@+id/win_odds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初赔"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="#52ff5a"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>